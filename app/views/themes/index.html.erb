<p style="color: green"><%= notice %></p>

<h1 class="p-4">Temas</h1>

<div class="container d-flex justify-content-end p-3">
  <%= link_to "Novo Tema", new_theme_path , :class => "btn btn-primary"%>
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Tema</th>
        <th>Editar</th>
        <th>Deletar</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @themes.each do |theme| %>
        <tr>
          <td><%= theme.theme %></td>
          <td><%= link_to "Editar", edit_theme_path(theme), :class => "btn btn-primary" %></td>
          <td><%= link_to "Deletar", theme, method: :delete, data: {confirm: ("Tem certeza que deseja apagar ?")}, :class => "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
