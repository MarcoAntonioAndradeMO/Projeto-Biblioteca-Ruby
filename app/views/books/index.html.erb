<p style="color: green"><%= notice %></p>

<h1 class="p-4">Livros</h1>

<div class="container d-flex justify-content-end p-3">
  <%= link_to "New book", new_book_path %>
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Nome do Livro</th>
          <th>Autor</th>
          <th>Ano</th>
          <th>ISBN</th>
          <th>Quantidade</th>
        </tr>
      </thead>

      <tbody>

      </tbody>

    </table>
  </div>
</div>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>


